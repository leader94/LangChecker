<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/transparent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/rectangle_top_round"
    android:weightSum="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <ImageButton
        android:id="@+id/pm_ib_close"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginRight="5dp"
        android:padding="@dimen/padding_8dp"
        android:layout_gravity="right|center"
        android:background="@drawable/ic_close_white_48dp"/>

</LinearLayout>
    <EditText
        android:id="@+id/pm_et_textbox"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="5dp"
        android:gravity="start"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:textColor="@color/black"

        android:background="@color/white"
        />
<LinearLayout
    android:id="@+id/pm_ll_botton_panel"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/rectangle_color_secondary"
    android:layout_marginTop="-7dp"
    android:weightSum="1">

    <TextView
        android:id="@+id/pm_tv_copy_and_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_color_secondary"
        android:text="@string/copy_and_exit"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight=".9"/>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/black" />
    <ImageButton
        android:id="@+id/pm_ib_refresh"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:layout_gravity="right|center"
        android:background="@drawable/ic_refresh_black_48dp"

        android:layout_weight=".1"
        />

</LinearLayout>
</LinearLayout>