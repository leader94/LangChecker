<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="bluetowel.com.langchecker.fragment.SettingsFragment">


    <LinearLayout
        android:id="@+id/fs_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fs_tv_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fs_v_d1"
            android:gravity="center_vertical"
            android:text="Display Popup"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1" />

        <ToggleButton
            android:id="@+id/fs_tb_popup"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_alignRight="@+id/fs_tv_popup"
            android:layout_below="@+id/fs_v_d1"
            android:checked="true"
            android:gravity="center"
            android:textOff="No"
            android:textOn="Yes" />

    </LinearLayout>

    <View
        android:id="@+id/fs_v_d1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/fs_ll1"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:background="@drawable/rectangle_color_secondary" />


    <LinearLayout
        android:id="@+id/fs_ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fs_v_d1"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/fs_tv_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/fs_s_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/fs_tv_lang"
            android:layout_gravity="right"
            android:entries="@array/supportedLanguages"
            android:gravity="center" />

    </LinearLayout>


    <View
        android:id="@+id/fs_v_d2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/fs_ll2"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:background="@drawable/rectangle_color_secondary" />


    <EditText
        android:id="@+id/fs_et_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fs_v_d2"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:backgroundTint="@color/colorSecondary"
        android:hint="Server IP" />

    <EditText
        android:id="@+id/fs_et_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fs_et_server"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:backgroundTint="@color/colorSecondary"
        android:hint="Port Number"
        android:inputType="number"/>


    <Button
        android:id="@+id/fs_b_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorSecondaryLight"
        android:textSize="18sp"
        android:text="Save"/>
</RelativeLayout>
